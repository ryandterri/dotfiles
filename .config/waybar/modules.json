{
  "hyprland/window": {
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true
  },
  "custom/capture_area": {
    "format": " ",
    "on-click": "sleep 0.1 && ~/.config/hypr/scripts/capture_area.sh",
    "tooltip": false
  },
  "custom/lock_screen": {
    "format": "",
    "on-click": "swaylock",
    "tooltip": false
  },
  "custom/logout": {
    "format": " ",
    "on-click": "hyprctl dispatch exit",
    "tooltip": false
  },
  "custom/wlogout": {
    "format": "{icon}",
    "format-icons": "\uF011",
    "on-click": "wlogout",
    "tooltip": false
  },
  "custom/wp_prev": {
    "format": "\uF04A",
    "on-click": "~/.config/hypr/scripts/wp_prev.sh",
    "tooltip": false
  },
  "custom/wp_next": {
    "format": "\uF04E",
    "on-click": "~/.config/hypr/scripts/wp_next.sh",
    "tooltip": false
  }
}
